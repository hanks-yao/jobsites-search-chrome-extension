{
  "name": "Jobsites Search",
  "description": "Jobsites Search",
  "version": "0.9",
  "manifest_version": 2,
  "permissions": ["tabs","declarativeContent","activeTab"],
  "background": {
    "scripts": ["asset/jquery-2.0.3.js", "js/utils.js", "js/db.js", "background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Jobsites Search",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.indeed.com/*", "*://indeed.com/*"],
      "js": ["asset/jquery-2.0.3.js", "js/utils.js", "content_script/content_script.js"]
    }, {
      "matches": ["*://*.glassdoor.com/Job*"],
      "js": ["asset/jquery-2.0.3.js", "js/utils.js", "content_script/content_script_glassdoor.js"]
    }, {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["asset/jquery-2.0.3.js", "js/utils.js", "content_script/content_script_linkedin.js"]
    }
  ],
  "options_page": "options.html",
  // "options_ui": {
  //   "page": "options.html",
  //   "open_in_tab": false
  // },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
